{% for collection in collections offset:2 %}
  {% if collection.title == "OUTDOORS" %}
    {% assign outdoors = collection.url %}
  {% endif %}

  {% if collection.title == "PLUSH TOYS" %}
    {% assign plush-toys = collection.url %}
  {% endif %}

  {% if collection.title == "WOODEN TOYS" %}
    {% assign wooden-toys = collection.url %}
  {% endif %}
{% endfor %}

<div class="categories-main">
  {% for block in section.blocks %}
    {% case block.settings.opc %}
        {% when '1' %}
          {%  assign class-name = "banner-wooden-toys" %}
          {%  assign second-class = "wooden-toys-content"%}
          {%  assign collection_url = outdoors %}
        {% when '2' %}
          {%  assign class-name = "banner-plush-toys" %}
          {%  assign second-class = "plush-toys-content"%}
          {%  assign collection_url = plush-toys %}
        {% when '3' %}
          {%  assign class-name = "banner-outdoors" %}
          {%  assign second-class = "outdoors-content" %}
          {%  assign collection_url = wooden-toys %}
    {% endcase %}
        <div class="{{ class-name }} category-{{ block.id }}">
          <div class="{{second-class}}">
            <a href="{{ collection_url }}" class="cont">
              <h2 class="title">{{ block.settings.title }}</h2>
            </a>
        </div>
      </div>
  {% endfor %}
  {% include 'scroll-up' %}
</div>

<style>
  {% for block in section.blocks %}
    .category-{{ block.id }} {
      background-image: url('{{ block.settings.banner_img | img_url: 'large' }}');
    }
  {% endfor %}
</style>

{% schema %}
{
 "name":"Featured Categories",
 "max_blocks":3,
 "blocks":[
   {
     "type":"image",
     "name":"Category",
     "settings":[
       {
         "type":"image_picker",
         "id":"banner_img",
         "label":"Image",
         "info":"image should be 800px x 800px"
       },
       {
         "type": "text",
         "id": "title",
         "label": "Title",
         "default": "Title"
       },
       {
         "type":      "select",
         "id":        "opc",
         "label":     "Type of banner",
         "options": [
           {
             "group": "Categories",
             "value": "1",
             "label": "Top banner"
           },
           {
             "group": "Categories",
             "value": "2",
             "label": "Mid banner"
           },
           {
             "group": "Categories",
             "value": "3",
             "label": "Bottom banner"
           }
         ],
         "default":   "1",
         "info":      "Just one of each type"
       }
     ]
   }
 ],
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Banners"
    }
  ]
}
{% endschema %}
