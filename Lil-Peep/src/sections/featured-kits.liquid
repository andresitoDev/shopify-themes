
<section class="featured-kits">
  <div class="flex-grid">
    {% for block in section.blocks %}
      {% if block.settings.opc == "1" %}
        <div class="big-banner banner-{{block.id}}">
          <div class="big-banner-content">
            <h1>T{{ block.settings.title }}</h1>
            <p>{{ block.settings.description }}</p>
            <div class="view-in-detail">
              <a href="/PDP.html" type="button" name="view-button">
                <h4>VIEW</h4>
              </a>
            </div>
          </div>
        </div>
      {% else %}
        {% if block.settings.opc == "2"%}
          <div class="small-banner banner-{{block.id}}">
            <p>{{ block.settings.title}}</p>
              <div class="big-text">
                <p>{{block.settings.description}}</p>
                <p>{{block.settings.button}}</p>
             </div>
         </div>
       {% endif %}
      {% endif %}
    {% endfor %}
  </div>
  <div class="flex-grid">
    {% for block in section.blocks %}
      {% if block.settings.opc == "3"  %}
              <div class="mid-banner mid-banner-saylor banner-{{block.id}}">
                <div class="mid-banner-content">
                  <h1>{{ block.settings.title }}</h1>
                  <p>{{block.settings.description}}</p>
                  <button type="button" name="button"><h1>{{block.settings.button}}</h1></button>
                </div>
              </div>
       {% else %}
        {% if block.settings.opc == "4" %}
          <div class="mid-banner mid-banner-archeologist banner-{{block.id}}">
            <div class="mid-banner-content">
              <h1>{{ block.settings.title }}</h1>
              <p>{{block.settings.description}}</p>
              <button type="button" name="button"><h1>{{block.settings.button}}</h1></button>
            </div>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Styles for the background of the 2 mid-banner -->
<style>
{% for block in section.blocks %}
  .banner-{{block.id}} {
    background-image: url('{{ block.settings.banner_img | img_url: 'large'}}');
  }
{% endfor %}
</style>

{% schema %}
{
 "name":"Featured Kits",
 "max_blocks":4,
 "blocks":[
   {
     "type":"image",
     "name":"Kit",
     "settings":[
       {
         "type":"image_picker",
         "id":"banner_img",
         "label":"Image",
         "info":"image should be 800px x 800px"
       },
       {
         "type": "text",
         "id": "title",
         "label": "Title",
         "default": "Title"
       },
       {
         "type": "text",
         "id": "description",
         "label": "Description",
         "default": "Description"
       },
       {
         "type": "text",
         "id": "button",
         "label": "Button",
         "default": "Text"
       },
       {
         "type":      "select",
         "id":        "opc",
         "label":     "Type of banner",
         "options": [
           {
             "group": "Top-Banners",
             "value": "1",
             "label": "Big banner"
           },
           {
             "group": "Top-Banners",
             "value": "2",
             "label": "Small banner"
           },
           {
             "group": "Low-Banners",
             "value": "3",
             "label": "Left banner"
           },
           {
             "group": "Low-Banners",
             "value": "4",
             "label": "Right banner"
           }
         ],
         "default":   "1",
         "info":      "Just one of each type"
       }
     ]
   }
 ],
  "presets": [
    {
      "name": "Featured Kits",
      "category": "Banners"
    }
  ]
}
{% endschema %}
