{% if block.settings.type_banner  %}
    <p>Esta activo </p>
{% endif %}
<section class="featured-kits">
  <div class="flex-grid">
    <div class="big-banner">
      <div class="big-banner-content">
        <h1>TREASURE ISLAND</h1>
        <p>Your kid is an adventurer, ennui, church-key organic small batch kitsch selfies ugh PBR Godard.  </p>
        <div class="view-in-detail">
          <a href="/PDP.html" type="button" name="view-button">
            <h4>VIEW</h4>
          </a>
        </div>
      </div>
    </div>
    <div class="small-banner">
      <p>SEASON CLERANCE</p>
      <div class="big-text">
        <p>ALL KITS</p>
        <p>50% OFF</p>
      </div>
    </div>
  </div>
  <div class="flex-grid">
          {% for block in section.blocks %}
            {% if forloop.first == true %}
              <div class="mid-banner mid-banner-saylor mid-banner-{{block.id}}">
                <div class="mid-banner-content">
                  <h1>{{ block.settings.title }}</h1>
                  <p>{{block.settings.description}}</p>
                  <button type="button" name="button"><h1>{{block.settings.button}}</h1></button>
                </div>
              </div>
            {% else %}
              <div class="mid-banner mid-banner-archeologist mid-banner-{{block.id}}">
                <div class="mid-banner-content">
                  <h1>{{ block.settings.title }}</h1>
                  <p>{{block.settings.description}}</p>
                  <button type="button" name="button"><h1>{{block.settings.button}}</h1></button>
                </div>
             </div>
            {% endif %}
          {% endfor %}
  </div>
</section>

<!-- Styles for the background of the 2 mid-banner -->
<style>
{% for block in section.blocks %}
  .mid-banner-{{block.id}} {
    background-image: url('{{ block.settings.banner_img | img_url: 'large'}}');
  }
{% endfor %}
</style>

{% schema %}
{
 "name":"Featured Kits",
 "max_blocks":4,
 "blocks":[
   {
     "type":"image",
     "name":"Kit",
     "settings":[
       {
         "type":"image_picker",
         "id":"banner_img",
         "label":"Image",
         "info":"image should be 800px x 800px"
       },
       {
         "type": "text",
         "id": "title",
         "label": "Title"
         "default": "Title"
       },
       {
         "type": "text",
         "id": "description",
         "label": "Description",
         "default": "Description"
       },
       {
         "type": "text",
         "id": "button",
         "label": "Button",
         "default": "Text"
       },
       {
         "type": "checkbox",
         "id": "collection_sort",
         "default": true,
         "label": "Enable sorting"
       }
     ]
   }
 ]
}
{% endschema %}
