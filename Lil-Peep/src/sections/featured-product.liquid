{%- assign product = all_products[section.settings.product] -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

{% if product == empty %}
  {%- assign section_onboarding = true -%}
  {%- assign onboarding_title = 'homepage.onboarding.product_title' | t -%}
{% endif %}

<div data-section-id="{{ section.id }}" data-section-type="product" itemscope itemtype="http://schema.org/Product">

  {%- assign collection_product = collections.featured_products -%}
  <div class="related-product-container">
    <h2 class="related-product-title">{{ 'homepage.onboarding.featured-products' | t }}</h2>
    <div class="mobile">
      {% paginate collection_product.products by 1 %}
        {%- include 'collection-container', product_collection: collection_product -%}
      {% endpaginate %}
    </div>

    <div class="desktop">
      {% paginate collection_product.products by 4 %}
        {%- include 'collection-container', product_collection: collection_product -%}
      {% endpaginate %}
    </div>
  </div>
</div>
