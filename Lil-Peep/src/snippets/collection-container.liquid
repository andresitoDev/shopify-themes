<div class="collection-container">
  <div>
    {% for product in product_collection.products %}
      <div class="product-card-category">
        <div class="products-slider">
          <div class="front-label">
            {% assign date_created = product.created_at | date:'%s' %}
            {% assign     date_now = 'now' | date:'%s' %}
            {% assign   difference = date_now | minus: date_created %}

            {% if difference < 172800 %}
              <p class="new-product">NEW</p>
            {% else %}
              <p class="not-new-product">NOT NEW</p>
            {% endif %}
          </div>
          <div class="product-image">
            {% if product.featured_image != blank %}
              <a href="{{ paginate.previous.url }}">
                {{ 'arrow_left.png' | asset_url | img_tag  }}
              </a>
              <a href="{{ product.url | within: collection }}">
                {{ product.featured_image.src | img_url: '480x480' | img_tag: product.featured_image.alt }}
              </a>
              <a href="{{ paginate.next.url }}">
                {{ 'arrow_right.png' | asset_url | img_tag }}
              </a>
            {% endif %}
          </div>
        </div>
        <div class="product-data">
          <p>
            <a href="{{ product.url | within: collection }}" class="product-title">{{ product.title }}</a>
          </p>
          <div class="price">
            <p class="price">
              {{ product.price | money }} USD
              {% if product.compare_at_price > product.price %}
                <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                <p class="offer">{{ product.compare_at_price | money }} USD </p>
              {% endif %}

              {% unless product.available %}
                {{ 'products.product.sold_out' | t }}
              {% endunless %}
            </p>
          </div>
          <div class="view-in-detail">
            <a href="javascript:void(0)" type="button" name="view-button">
              <h4>{{ 'collections.general.view' | t }}</h4>
            </a>
          </div>
        </div>
        <a
          class="view-in-detail"
          href="{{ product.url | within: collection }}">
            {{ 'collections.general.view' | t }}
        </a>
      </div>

    {% else %}

        <p>{{ 'collections.general.no_matches' | t }}</p>

    {% endfor %}
  </div>
</div>
