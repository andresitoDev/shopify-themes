<div class="box-micro">
  {% if product.images.size > 1 %}
      {% for image in product.images %}
          <a href="#"  data-product-single-thumbnail>
            <img onclick="selectimage('{{ image.src | img_url: '600x600' }}')" class="{% if forloop.first == true %} selected {% endif %} view" src="{{ image.src | img_url: '160x160' }}" alt="{{ image.alt | escape }}">
          </a>
      {% endfor %}
  {% endif %}
</div>
