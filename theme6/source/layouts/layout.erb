<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Lato|Oswald:300" %>
    <%= stylesheet_link_tag "site" %>
    <%= stylesheet_link_tag "category-description-banner" %>
    <%= stylesheet_link_tag "featured_products" %>
    <%= stylesheet_link_tag "featured-categories" %>
    <%= stylesheet_link_tag "main" %>
    <%= stylesheet_link_tag "related_products" %>
    <%= stylesheet_link_tag "details" %>
    <%= stylesheet_link_tag "header" %>
    <%= stylesheet_link_tag "categories" %>


  </head>
  <body>
    <%= partial 'partials/header' %>
    <div class="main-container">

      <%= yield %>

    </div>
    <%= partial 'partials/footer' %>
    <%= javascript_include_tag "details"%>
    <%= javascript_include_tag "site" %>
  </body>
</html>
