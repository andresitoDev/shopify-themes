    <!-- hero -->
    <div class="hero-image-categories"></div>

    <!-- back -->
    <div class="content">
      <div class="back-btn">
        <span class="back-icon"></span>back
      </div>
    </div>

    <!-- products -->
    <div class="products-container">

      <div class="title">
        <h6 class="h-style">{{ collection.title }}</h6>
      </div>

      <div class="pagination-container">
        <a href="#" class="prev-btn">
          <span class="prev-icon"></span>prev
        </a>
        <a href="#" class="next-btn">
          next<span class="next-icon"></span>
        </a>
      </div>

      <div class="products-list">

        {% if collection.all_products_count > 0 %}
        {% for product in collection.products %}
        <a class="product-link" href="{{ product.url }}">
          <div class="product-item">
            <img src="{{ product.featured_image | product_img_url: 'grande' }}" alt="{{ product.title | escape }}">
            <p class="product-name">{{ product.title }}</p>
            <p class="product-price">{{ product.price | money }}</p>
          </div>
        </a>
        {% endfor %}
        {% else %}
        <p>Sorry, there are no products in this collection</p>
        {% endif %}

      </div>

    </div>
