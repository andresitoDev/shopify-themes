
{% section 'carousel' %}

<div class="">
  <h1>news 1</h1>
</div>

<div class="categories-section">

  <div class="categories">
    {% for collection in collections %}
    <div class="categorie-item">
      <div class="categorie-title">
        <h3>{{ collection.title }}</h3>
      </div>
      <div class="categorie-body">
        <a href="{{ collection.url }}">
          <div class="outer-box">
            {% if collection.image %}
            <img class="categorie-picture" src="{{ collection | img_url: '323x436' }}" alt="{{ collection.img.alt }}">
            <div class="inner-box">
              <p class="categorie-btn">shop now</p>
              <!-- <a href="{{ collection.url }}" class="categorie-btn">shop now</a> -->
            </div>
            {% else %}
            <p>Image not found</p>
            {% endif %}
          </div>
        </a>
      </div>
      <div class="categorie-description">
        <p>{{ collection.description }}</p>
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="rectangle-decorator"></div>

</div>

<div class="">
  <h1>news 2</h1>
</div>
