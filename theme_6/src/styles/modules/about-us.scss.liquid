div.page-about-us {
  width: 100%;
  background-color: $color-body;

  h1 {
    font-size: 32px;
    font-family: $font-title-body;
    text-align: center;
    text-transform: uppercase;
    color: $color-body-title;
  }

  div.page-body-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    // Banner section
    .page-body-banner {
      display: block;
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      background-image: url({{ 'banner-about-us.png', asset_url }});
      background-repeat: no-repeat;
      display: flex;
      align-items: center;
      .page-about-banner-legend {
        color: #ffffff;
        height: 195px;
        width: 530px;
        margin-left: 70px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        .page-about-banner-title {
          height: 35px;
          width: 100%;
          text-transform: uppercase;
          font-family: $font-title-body;
          font-size: 32px;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        .page-about-banner-description {
          text-align: center;
          font-size: 19px;
          height: 140px;
          width: 100%;
          display: flex;
          justify-content: center;
        }
      }
    }

    // Story section
    .page-body-story {
      background-color: #ffffff;
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;
      justify-content: center;
      align-items: center;
      .about-story-content {
        height: 350px;
        width: 1117px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        .about-story-title {
          text-transform: uppercase;
          font-size: 28px;
          width: 100%;
          height: 34px;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        .about-story-description {
          width: 100%;
          height: 300px;
          column-count: 2;
          font-size: 20px;
          white-space: pre-line;
        }
      }
    }

    // More about section
    .page-body-more-about {
      height: 350px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;

      .more-about-legend {
        height: 100%;
        width: 684px;
        display: flex;
        justify-content: center;
        align-items: center;
        .more-about-content {
          height: 227px;
          width: 530px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          .more-about-title {
            text-transform: uppercase;
            font-size: 28px;
            height: 60px;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
          }
          .more-about-description {
            height: 154px;
            width: 100%;
            text-align: center;
            font-size: 20px;
          }
        }
      }

      .more-about-image {
        height: 100%;
        width: 684px;
        background-image: url({{ 'more-about.png', asset_url }});
        background-repeat: no-repeat;
      }
    }

    // Images section
    .page-body-images {
      height: 400px;
      width: 1370px;
      margin-bottom: 25px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;

      div {
        height: 100%;
        width: 440px;
      }
      .about-image1 {
        background-image: url({{ 'about-image1.png', asset_url }});
        background-repeat: no-repeat;
      } 
      .about-image2 {
        background-image: url({{ 'about-image2.png', asset_url }});
        background-repeat: no-repeat;
      } 
      .about-image3 {
        background-image: url({{ 'about-image3.png', asset_url }});
        background-repeat: no-repeat;
      } 
    }
  }
}
